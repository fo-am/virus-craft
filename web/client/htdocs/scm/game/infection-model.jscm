;; find a space far enough away from other hosts, returns #f if 
;; there are none present

;; we don't care about collisions any more as everyone is moving around
(define (find-free-location position population distance num-tries)
  (vector
   (max host-loc-lat-safe 
	(modulo 
	 (+ (vx position) (* distance (sin (* (rndf) two-pi)))) 
	 host-loc-lat-width))
   (max host-loc-lng-safe
	(modulo 
	 (+ (vy position) (* distance (cos (* (rndf) two-pi)))) 
	 host-loc-lng-width))
   0))


