;; minimal geometry

(define (sq x) (* x x))

(define (vec2-dist a b)
  (sqrt (+ (sq (- (vx a) (vx b)))
	   (sq (- (vy a) (vy b))))))

(define (vec2-squashed-dist a b)
  (sqrt (+ (sq (- (vx a) (vx b)))
	   (sq (/ (- (vy a) (vy b)) 2)))))

(define two-pi (* 2 3.141))

